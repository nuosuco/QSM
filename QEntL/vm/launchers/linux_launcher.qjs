            try {
                const fs = require('fs');
                const content = fs.readFileSync('/etc/os-release', 'utf8');
                const match = content.match(/VERSION_ID="?([^"\n]*)"?/);
                return match ? match[1] : "unknown";
            } catch (error) {
                return "unknown";
            }
        })(),
        architecture: process.arch || "x64",
        cores: (() => {
            try {
                const os = require('os');
                return os.cpus().length;
            } catch (error) {
