    fileSystem: {
        readFile: function(path) {
            try {
                const fs = require('fs');
                return fs.readFileSync(path, 'utf8');
            } catch (error) {
                QEntLLinuxRuntime.log("FileSystem", `读取文件失败: ${path}, 错误: ${error.message}`, "ERROR");
                return null;
            }
        },
        
        writeFile: function(path, content) {
            try {
                const fs = require('fs');
                fs.writeFileSync(path, content, 'utf8');
