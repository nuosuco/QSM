            parsed.type = "module";
            
            // 提取模块名称
            const moduleMatch = content.match(/quantum_module\s+(\w+)/);
            if (moduleMatch) {
                parsed.name = moduleMatch[1];
            }
        }
        
        QEntLLinuxRuntime.log("Parser", `文件解析完成，类型: ${parsed.type}, 名称: ${parsed.name}`);
        return parsed;
