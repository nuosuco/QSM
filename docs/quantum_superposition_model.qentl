  default_state: "confusion",
  transition_paths: [
    { from: "confusion", to: "wisdom", difficulty: 0.7 },
    { from: "wisdom", to: "enlightenment", difficulty: 0.9 },
    { from: "enlightenment", to: "wisdom", difficulty: 0.1 }
