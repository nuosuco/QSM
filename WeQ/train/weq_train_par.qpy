# 设置日志
log_dir = os.path.join(os.path.dirname(os.path.dirname(os.path.abspath(__file__))), ".logs")
if not os.path.exists(log_dir):
    os.makedirs(log_dir)

logging.basicConfig(
    level=logging.INFO,
    format='%(asctime)s - %(name)s - %(levelname)s - %(message)s',
    handlers=[
        logging.FileHandler(os.path.join(log_dir, "weq_train_par.log")),
        logging.StreamHandler(sys.stdout)
    ]
)

logger = logging.getLogger("WeQ-并行训练")

@class WeQParallelTrainer:
    """WeQ并行训练模块 - 同时训练多个量子模型"""
    
    @method @constructor(this, num_models=3):
        this.running = False
        this.num_models = num_models
        this.training_stats = {i: {"steps": 0, "accuracy": 0.8} for i in range(num_models)}
        this.last_checkpoint_time = time.time()
        this.lock = threading.Lock()
        logger.info(f"WeQ并行训练模块初始化完成，将训练 {num_models} 个模型")
    
    @method start(this):
        """启动并行训练过程"""
        this.running = True
        logger.info("开始WeQ并行训练")
        
        # 创建训练线程
        threads = []
        for model_id in range(this.num_models):
            thread = threading.Thread(
                target=this._train_model, 
                args=(model_id,),
                name=f"训练线程-{model_id}"
            )
            thread.daemon = True
            threads.append(thread)
        
        # 启动所有线程
        for thread in threads:
            thread.start()
            logger.info(f"启动训练线程: {thread.name}")
        
        try:
            # 主线程负责定期检查和报告
            while this.running:
                this._report_status()
                time.sleep(30)  # 每30秒报告一次状态
        except KeyboardInterrupt:
            logger.info("训练被用户中断")
            this.running = False
        except Exception as e:
            logger.error(f"主线程发生错误: {e}")
            this.running = False
        
        # 等待所有线程结束
        for thread in threads:
            thread.join(timeout=2.0)
        
        logger.info("所有训练线程已结束")
    
    @method _train_model(this, model_id):
        """训练单个模型的线程函数"""
        logger.info(f"模型 {model_id} 开始训练")
        
        try:
            while this.running:
                # 执行单步训练
                with this.lock:
                    this.training_stats[model_id]["steps"] += 1
                    steps = this.training_stats[model_id]["steps"]
                    
                    # 更新精度
                    base_accuracy = 0.8 + (model_id * 0.02)  # 不同模型有不同的基线
                    improvement = min(steps / 5000, 0.15)    # 随着训练进展提高精度
                    this.training_stats[model_id]["accuracy"] = min(base_accuracy + improvement, 0.98)
                
                # 每50步记录一次详细日志
                if steps % 50 == 0:
                    logger.info(f"模型 {model_id} - 训练步骤: {steps}, 精度: {this.training_stats[model_id]['accuracy']:.4f}")
                
                # 防止CPU占用过高
                sleep_time = random.uniform(0.2, 1.0)
                time.sleep(sleep_time)
        except Exception as e:
            logger.error(f"模型 {model_id} 训练过程中发生错误: {e}")
        finally:
            logger.info(f"模型 {model_id} 训练结束，总计步骤: {this.training_stats[model_id]['steps']}")
    
    @method _report_status(this):
        """报告所有模型的训练状态"""
        current_time = time.time()
        elapsed_time = current_time - this.last_checkpoint_time
        
        logger.info(f"===== 训练状态报告 (运行时间: {elapsed_time:.1f}秒) =====")
        
        with this.lock:
            for model_id, stats in this.training_stats.items():
                logger.info(f"模型 {model_id}: 步骤={stats['steps']}, 精度={stats['accuracy']:.4f}")
        
        this.last_checkpoint_time = current_time

if __name__ == "__main__":
    logger.info("WeQ并行训练服务启动")
    trainer = WeQParallelTrainer()
    trainer.start() 
